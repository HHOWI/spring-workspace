<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">

	<resultMap type="Board" id="boardMap">
		<id property="no" column="no"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="writer" column="writer"/>
		<result property="regdate" column="regdate"/>
	</resultMap>

	<insert id="insert" parameterType="Board" useGeneratedKeys="true" keyProperty="no" keyColumn="no">
		INSERT INTO BOARD VALUES(seq_board.nextval, #{title}, #{content}, #{writer}, default)
	</insert>
	
	<select id="selectAll" resultMap="boardMap">
		<![CDATA[
		SELECT NUM, NO, TITLE, WRITER, REGDATE
			FROM(
    			SELECT /*+ INDEX_DESC(BOARD PK_BOARD) */
    			ROWNUM NUM, NO, TITLE, WRITER, REGDATE
    			FROM BOARD
    			WHERE ROWNUM <= #{page} * #{amount}
				)
			WHERE NUM > (#{page} - 1) * #{amount}
			]]>
	</select>
	
	<select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM BOARD
	</select>
	
	<select id="select" parameterType="int" resultMap="boardMap">
		SELECT *
		FROM BOARD
		WHERE NO = #{no}
	</select>
	
	<update id="update" parameterType="Board">
		UPDATE BOARD SET title=#{title}, content=#{content} WHERE no = #{no}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM BOARD WHERE no=#{no}
	</delete>
</mapper>
